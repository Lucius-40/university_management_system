{
	"info": {
		"_postman_id": "bank-account-api-collection",
		"name": "Bank Account API",
		"description": "Collection for testing bank account endpoints in the university management system",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Create Bank Account",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{token}}",
						"description": "JWT token for authentication"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"account_number\": \"1234567890\",\n    \"account_type\": \"savings\",\n    \"balance\": 1000.00,\n    \"status\": \"active\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/bank-account/create-account",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"bank-account",
						"create-account"
					]
				},
				"description": "Creates a new bank account with account number, type, balance, and status"
			},
			"response": []
		},
		{
			"name": "Get Bank Account by ID",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}",
						"description": "JWT token for authentication"
					}
				],
				"url": {
					"raw": "{{base_url}}/bank-account/get-account/:id",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"bank-account",
						"get-account",
						":id"
					],
					"variable": [
						{
							"key": "id",
							"value": "1",
							"description": "Bank account ID"
						}
					]
				},
				"description": "Retrieves a bank account by its ID"
			},
			"response": []
		},
		{
			"name": "Update Bank Account",
			"request": {
				"method": "PATCH",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{token}}",
						"description": "JWT token for authentication"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"id\": 1,\n    \"account_number\": \"1234567890\",\n    \"account_type\": \"checking\",\n    \"balance\": 1500.00,\n    \"status\": \"active\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/bank-account/update-account",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"bank-account",
						"update-account"
					]
				},
				"description": "Updates an existing bank account with new details"
			},
			"response": []
		},
		{
			"name": "Delete Bank Account",
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}",
						"description": "JWT token for authentication"
					}
				],
				"url": {
					"raw": "{{base_url}}/bank-account/delete-account/:id",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"bank-account",
						"delete-account",
						":id"
					],
					"variable": [
						{
							"key": "id",
							"value": "1",
							"description": "Bank account ID to delete"
						}
					]
				},
				"description": "Deletes a bank account by its ID"
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3000",
			"type": "string"
		},
		{
			"key": "token",
			"value": "",
			"type": "string"
		}
	]
}
