{
    "info": {
        "_postman_id": "scholarship-api-collection",
        "name": "Scholarship API",
        "description": "Collection for testing scholarship endpoints in the university management system",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Create Scholarship",
            "request": {
                "method": "POST",
                "header": [
                    { "key": "Content-Type", "value": "application/json" },
                    { "key": "Authorization", "value": "Bearer {{token}}", "description": "JWT token for authentication" }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"bank_account_id\": 1,\n    \"name\": \"Merit Scholarship\",\n    \"requirements\": \"GPA > 3.5\",\n    \"status\": true\n}"
                },
                "url": {
                    "raw": "{{base_url}}/scholarships/create",
                    "host": [ "{{base_url}}" ],
                    "path": [ "scholarships", "create" ]
                },
                "description": "Creates a new scholarship"
            },
            "response": []
        },
        {
            "name": "Get Scholarship by ID",
            "request": {
                "method": "GET",
                "header": [
                    { "key": "Authorization", "value": "Bearer {{token}}", "description": "JWT token for authentication" }
                ],
                "url": {
                    "raw": "{{base_url}}/scholarships/get-scholarship/:id",
                    "host": [ "{{base_url}}" ],
                    "path": [ "scholarships", "get-scholarship", ":id" ],
                    "variable": [
                        { "key": "id", "value": "1", "description": "Scholarship ID" }
                    ]
                },
                "description": "Retrieves a scholarship by its ID"
            },
            "response": []
        },
        {
            "name": "Update Scholarship",
            "request": {
                "method": "PATCH",
                "header": [
                    { "key": "Content-Type", "value": "application/json" },
                    { "key": "Authorization", "value": "Bearer {{token}}", "description": "JWT token for authentication" }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"id\": 1,\n    \"bank_account_id\": 2,\n    \"name\": \"Need-based Scholarship\",\n    \"requirements\": \"Income < 50000\",\n    \"status\": false\n}"
                },
                "url": {
                    "raw": "{{base_url}}/scholarships/update",
                    "host": [ "{{base_url}}" ],
                    "path": [ "scholarships", "update" ]
                },
                "description": "Updates an existing scholarship"
            },
            "response": []
        },
        {
            "name": "Delete Scholarship",
            "request": {
                "method": "DELETE",
                "header": [
                    { "key": "Authorization", "value": "Bearer {{token}}", "description": "JWT token for authentication" }
                ],
                "url": {
                    "raw": "{{base_url}}/scholarships/delete-scholarship/:id",
                    "host": [ "{{base_url}}" ],
                    "path": [ "scholarships", "delete-scholarship", ":id" ],
                    "variable": [
                        { "key": "id", "value": "1", "description": "Scholarship ID to delete" }
                    ]
                },
                "description": "Deletes a scholarship by its ID"
            },
            "response": []
        }
    ],
    "variable": [
        { "key": "base_url", "value": "http://localhost:3000", "type": "string" },
        { "key": "token", "value": "", "type": "string" }
    ]
}
