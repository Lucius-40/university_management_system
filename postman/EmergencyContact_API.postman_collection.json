			"name": "Create Emergency Contact",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"user_id\": 1,\n    \"name\": \"John Doe Sr.\",\n    \"relation\": \"Father\",\n    \"mobile_number\": \"+8801712345678\",\n    \"address\": \"123 Main Street, Dhaka, Bangladesh\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/users/emergency-contact",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"users",
						"emergency-contact"
					]
				},
